			footer#footer
				.container
					.row
						.copyright.col-md-3
							a(href="#").wrongware-copyright-logo
								img(src="/src-comp/WRONGWARE_logo.png", alt="Copyright logo")
							p © 2014 Rychlíkodéři

						nav.col-md-6
							a(href="#") Obchodní podmínky
							a(href="#") O nás
							a(href="#") Blog
							a(href="#") Kariéra
							a(href="#") Kontakt

						.social-buttons.col-md-3
							a.twitter(href="#")
							a.facebook(href="#")
							a.google(href="#")
